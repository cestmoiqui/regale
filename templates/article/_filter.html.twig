{{ form_start(articleForm, {'attr': {'class': 'form-inline d-flex w-100 align-items-center flex-wrap'}}) }}

<div class="col-12 col-xl-2 d-flex justify-content-center align-items-center text-center">
	<h3 class="m-xl-0 mb-3 text-primary fs-5">Filtres</h3>
</div>

{# Catégories #}
<div class="col-12 col-xl-3 px-2 py-2">
	<div class="dropdown w-100 position-relative">
		<button class="btn btn-warning dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
			Sélectionner la catégorie
		</button>
		<ul class="dropdown-menu p-4 start-0 end-0">
			{% for category in articleForm.categories %}
				<li class="d-flex align-items-start py-1 mx-auto col-7 col-md-3 col-xl-10">
					{{ form_widget(category, {'attr': {'class': 'me-2'}}) }}
					{{ form_label(category) }}
				</li>
			{% endfor %}
		</ul>
	</div>
</div>


{# Mots-Clés #}
<div class="col-12 col-xl-4 px-2 py-2">
	<div class="dropdown w-100 position-relative">
		<button class="btn btn-warning dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
			Sélectionner les tags
		</button>
		<ul class="dropdown-menu p-4 start-0 end-0">
			<div class="row">
				{% for tags in articleForm.tags %}
					<div class="col-6 col-md-3 col-xl-6">
						<li class="d-flex align-items-center py-1 px-2">
							{{ form_widget(tags, {'attr': {'class': 'me-2'}}) }}
							{{ form_label(tags) }}
						</li>
					</div>
				{% endfor %}
			</div>
		</ul>
	</div>
</div>


{# Trier #}
<div class="col-12 col-xl-3 px-2 py-2">
	<div class="dropdown w-100 position-relative">
		<button class="btn btn-warning dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
			Sélectionner le tri
		</button>
		<ul class="dropdown-menu p-4 start-0 end-0">
			{% for sort in articleForm.sort %}
				<li class="d-flex align-items-center py-1 mx-auto col-8 col-md-4 col-xl-10">
					{{ form_widget(sort, {'attr': {'class': 'me-2'}}) }}
					{{ form_label(sort) }}
				</li>
			{% endfor %}
		</ul>
	</div>
</div>

{# Recherche #}
<div class="col-12 px-2 py-2 d-flex">
	{{ form_widget(articleForm.q) }}
	<button class="btn btn-primary" type="submit">Appliquer</button>
</div>
{{ form_end(articleForm) }}
