{% extends '@!EasyAdmin/layout.html.twig' %}

{% block content %}
	<div
		class="container">
		<!-- Title -->
		<h1 class="pt-5">Bienvenue dans l'interface d'administration</h1>
		<div
			class="row mt-5 card-deck">
			<!-- User -->
			<div class="col-md-4 pt-3">
				<div class="card h-100">
					<div class="card-header bg-primary text-white">
						<i class="fa fa-users"></i>
						Utilisateurs
					</div>
					<div class="card-body">
						<a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\UserCrudController'}) }}" class="btn btn-primary m-1">
							<i class="fas fa-list pe-2"></i>Tous les utilisateurs</a>

						<a href="{{ path('admin', {'crudAction': 'new', 'crudControllerFqcn': 'App\\Controller\\Admin\\UserCrudController'}) }}" class="btn btn-secondary m-1">Ajouter un utilisateur</a>
					</div>
				</div>
			</div>
			<!-- Recipe -->
			<div class="col-md-4 pt-3">
				<div class="card h-100">
					<div class="card-header bg-primary text-white">
						<i class="fas fa-book"></i>
						Recettes
					</div>
					<div class="card-body">
						<a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\RecipeCrudController'}) }}" class="btn btn-primary m-1">
							<i class="fas fa-list pe-2"></i>Toutes les recettes</a>
						<a href="{{ path('admin', {'crudAction': 'new', 'crudControllerFqcn': 'App\\Controller\\Admin\\RecipeCrudController'}) }}" class="btn btn-secondary m-1">Ajouter une recette</a>
						<a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\RecipeCategoryCrudController'}) }}" class="btn btn-secondary m-1">Catégories</a>
					</div>
				</div>
			</div>
			<!-- Artcile -->
			<div class="col-md-4 pt-3">
				<div class="card h-100">
					<div class="card-header bg-primary text-white">
						<i class="fas fa-newspaper"></i>
						Articles
					</div>
					<div class="card-body">
						<a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\ArticleCrudController'}) }}" class="btn btn-primary m-1">
							<i class="fas fa-list pe-2"></i>Tous les articles</a>
						<a href="{{ path('admin', {'crudAction': 'new', 'crudControllerFqcn': 'App\\Controller\\Admin\\ArticleCrudController'}) }}" class="btn btn-secondary m-1">Ajouter un article</a>
						<a href="{{ path('admin', {'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\ArticleCategoryCrudController'}) }}" class="btn btn-secondary m-1">Catégories</a>
					</div>
				</div>
			</div>
			<!-- Menus -->
			<div class="col-md-4 pt-3">
				<div class="card h-100">
					<div class="card-header bg-primary text-white">
						<i class="fas fa-list"></i>
						Menus
					</div>
					<div class="card-body">
						<a href="{{ path('admin', { 'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\MenuCrudController', 'submenuIndex': 0 }) }}" class="btn btn-primary m-1">
							<i class="fas fa-newspaper pe-2"></i>Article</a>
						<a href="{{ path('admin', { 'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\MenuCrudController', 'submenuIndex': 1 }) }}" class="btn btn-primary m-1">
							<i class="fas fa-book pe-2"></i>Recette</a>
						<a href="{{ path('admin', { 'crudAction': 'index', 'crudControllerFqcn': 'App\\Controller\\Admin\\MenuCrudController', 'submenuIndex': 2 }) }}" class="btn btn-primary m-1">
							<i class="fas fa-link pe-2"></i>Liens personnalisés</a>
					</div>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
