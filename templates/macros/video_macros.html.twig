{% macro display_video(media, altText) %}
	{% if media is not null %}
		<iframe src="{{ media.filename }}" title="{{ altText }}" loading="lazy" allowfullscreen></iframe>
	{% else %}
		<iframe src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0" title="{{ altText }}" loading="lazy" allowfullscreen></iframe>
	{% endif %}
{% endmacro %}

