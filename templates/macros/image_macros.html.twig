{% macro display_image(media, altText, extra_class = "", width = "", height = "") %}
	{% if media is not null %}
		<img src="{{ media.filename }}" alt="{{ altText }}" class="{{ extra_class }} img-fluid object-fit-cover" {{ width ? "width=" ~ width : "" }} {{ height ? "height=" ~ height : "" }} loading="lazy">
	{% else %}
		<img src="https://source.unsplash.com/random?cuisine,food" alt="{{ altText }}" class="{{ extra_class }} img-fluid object-fit-cover" {{ width ? "width=" ~ width : "" }} {{ height ? "height=" ~ height : "" }} loading="lazy">
	{% endif %}
{% endmacro %}

// This code uses the display_image macro to display an image, providing the various options used in the original code (media, alt, extra_class, width). We can now use this macro for all image tags in the code, passing the appropriate values for each case.
